{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - MyStore
{% endblock %}

{% block content %}

	<h2>Je passe ma commande</h2>
	<p>Choisissez vos préférences avant de passer votre commande sur MyStore</p>

	<div class="row">
		<div class="col-md-6">
			{% set formHtml %}

			{{ form(form) }}

				{% endset %}

				{{ formHtml|replace({'[br]' : '<br>'})|raw }}

				<br>
				<b>Choisir mon transport</b>
			</div>
			<div class="col-md-6">
				<b>Récap de ma commande</b>
				<br>
				<b>Bouton pour payer</b>
			</div>
		</div>


	{% endblock %}
